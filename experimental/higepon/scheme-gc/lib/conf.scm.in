(define mona-gui-auto-start #f)

;; prompt string
(define (mona-prompt-string)
  (string-append "mona:"
                 (fs-path (fs-current-directory))
                 ">"))

(define greeting-cont '())

(define (greeting)
  (print "Hello, I'm")
  (if (= 1 (call/cc (lambda (c) (set! greeting-cont c) 0)))
      (print "Higepon")
      (mona-timer-add greeting-cont 3000)
))


