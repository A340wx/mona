        * Control -> Component

        * Control::onStart() -> Component::addNotify()

        * Control::onExit()  -> Component::removeNotify()

        * Control::onEvent() -> Component::processEvent()

        * Control::onPaint() -> Component::paint()

        * Control::postEvent() -> Component::dispatchEvent()

