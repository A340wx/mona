all:
	@cd non-gui && $(MAKE) $@
	@cd gui && $(MAKE) $@
	@cd java && $(MAKE) $@

install:
	@cd non-gui && $(MAKE) $@
	@cd gui && $(MAKE) $@
	@cd java && $(MAKE) $@

clean:
	@cd non-gui && $(MAKE) $@
	@cd gui && $(MAKE) $@
	@cd java && $(MAKE) $@

depend:
	@cd non-gui && $(MAKE) $@
	@cd gui && $(MAKE) $@
	@cd java && $(MAKE) $@

distclean:
	@cd non-gui && $(MAKE) $@
	@cd gui && $(MAKE) $@
	@cd java && $(MAKE) $@
