MONADIR = .
include $(MONADIR)/env/dirnames.inc

TARGET = $(BINDIR)/mona.img

ELF_FILES = `ls $(BINDIR)/root/APPS/*.ELF`
SVR_FILES = `ls $(BINDIR)/root/SERVERS/*.SVR`

all:
	@cd tools; $(MAKE) $@
	@cd src; $(MAKE) $@
	@cd apps; $(MAKE) $@
	@cd samples; $(MAKE) $@

install:
	@cd tools; $(MAKE) $@
	@cd src; $(MAKE) $@
	@cd apps; $(MAKE) $@
	@cd samples; $(MAKE) $@
	@cd bin; $(MAKE)

clean:
	@cd tools; $(MAKE) $@
	@cd src; $(MAKE) $@
	@cd apps; $(MAKE) $@
	@cd samples; $(MAKE) $@
	@cd bin; $(MAKE) $@

depend:
	@cd tools; $(MAKE) $@
	@cd src; $(MAKE) $@
	@cd apps; $(MAKE) $@
	@cd samples; $(MAKE) $@

distclean: clean
	@cd tools; $(MAKE) $@
	@cd src; $(MAKE) $@
	@cd apps; $(MAKE) $@
	@cd samples; $(MAKE) $@
	rm -f Makefile
	rm -f env/Makefile.inc
