all:
	@cd tools; $(MAKE) CXX=g++ $@
	@cd src; $(MAKE) $@
	@cd apps; $(MAKE) $@
	@cd samples; $(MAKE) $@

install:
	date
	@cd tools; $(MAKE) $@
	@cd src; $(MAKE) $@
	@cd apps; $(MAKE) $@
	@cd samples; $(MAKE) $@
	bzip2 -c COPYRIGHT > bin/root/LICENSE.BZ2
	@cd bin; $(MAKE)
	date

clean:
	@cd tools; $(MAKE) $@
	@cd src; $(MAKE) $@
	@cd apps; $(MAKE) $@
	@cd samples; $(MAKE) $@
	rm -f bin/root/LICENSE.BZ2
	@cd bin; $(MAKE) $@

depend:
	@cd tools; $(MAKE) $@
	@cd src; $(MAKE) $@
	@cd apps; $(MAKE) $@
	@cd samples; $(MAKE) $@

distclean: clean
	@cd tools; $(MAKE) $@
	@cd src; $(MAKE) $@
	@cd apps; $(MAKE) $@
	@cd samples; $(MAKE) $@
	rm -f Makefile
	rm -f env/Makefile.inc

write: install
	@cd bin; $(MAKE) $@
